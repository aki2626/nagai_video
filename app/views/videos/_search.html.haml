.search_area
  .search_box.keyword_search
    = form_with(url: search_videos_path, local: true, method: :get) do |f|
      .form_area
        .form_text
          = f.text_field :keyword, class: "form_text__title", placeholder: "動画を検索"
          .form_text__js
            = link_to "#", class: "form_text__js--select" do
              キーワード
            = link_to "#", class: "form_text__js--unselect", id: "tag_js" do
              タグ
        .form_area__btn
          %label
            = icon('fas', 'search', class: "form_area__btn--icon")
            = f.submit "", class: "form_area__btn--display"
  .search_box.tag_search.display_none
    = form_with(url: tag_videos_path, local: true, method: :get) do |f|
      .form_area
        .form_text
          = f.text_field :tag_name, class: "form_text__title", placeholder: "動画を検索"
          .form_text__js
            = link_to "#", class: "form_text__js--unselect", id: "keyword_js"do
              キーワード
            = link_to "#", class: "form_text__js--select" do
              タグ
        .form_area__btn
          %label
            = icon('fas', 'search', class: "form_area__btn--icon")
            = f.submit "", class: "form_area__btn--display"