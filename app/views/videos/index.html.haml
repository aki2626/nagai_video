.header
  .header_top
    .header_top__logo
      nagai_video
    .mini_search_area
      = form_with(url: search_videos_path, local: true, method: :get) do |f|
        .form_area
          = f.text_field :keyword, class: "form_area__text", placeholder: "動画を検索"
          %label.form_area__btn
            = icon('fas', 'search')
            = f.submit "", class: "form_area__btn--display"
