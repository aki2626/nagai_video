.search_area
  .search_box.keyword_search.search_display
    = form_with(url: search_videos_path, local: true, method: :get) do |f|
      .form_area
        .form_text
          = f.text_field :keyword, class: "form_text__title", placeholder: "動画を検索"
          .form_text__js
            .form_text__js--title
              キーワード
            .form_text__js--tag
              タグ
        .form_area__btn
          %label
            = icon('fas', 'search', class: "form_area__btn--icon")
            = f.submit "", class: "form_area__btn--display"
  .search_box.tag_search
    = form_with(url: tag_videos_path, local: true, method: :get) do |f|
      .form_area
        .form_text
          = f.text_field :tag_name, class: "form_text__title", placeholder: "動画を検索"
          .form_text__js
            .form_text__js--title
              キーワード
            .form_text__js--tag
              タグ
        .form_area__btn
          %label
            = icon('fas', 'search', class: "form_area__btn--icon")
            = f.submit "", class: "form_area__btn--display"
.search_result
  .search_word
    - unless @search == ""
      = @search
      の検索一覧
  .movies
    - @videos.each do |video|
      .movie
        .left_content
          .left_content__created_at
            = video.created_at.strftime("%Y/%m/%d %H:%M")
          .left_content__thumbnail
            = link_to video_path(video) do
              = image_tag(video.movie_url(:screenshot), class: "left_content__thumbnail")
        .right_content
          = link_to video_path(video) ,class: "right_content__title"do
            = video.title
          .right_content__explain
            = video.explain
          %ul.detail_information
            %li.detail_information__title
              再生
            %li.detail_information__date
              = video.impressionist_count
            %li.detail_information__title
              コメ
            %li.detail_information__date
              = video.comments.length
            %li.detail_information__title
              マイ
            %li.detail_information__date
              = video.mylists.length
    = paginate @videos